<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #E0FBFC;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.pitzzahh.medicare.controllers.PatientsPanelController">
    <top>
        <HBox prefHeight="56.0" prefWidth="600.0" styleClass="header-box" stylesheets="@../../css/common.css" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER_LEFT" prefHeight="56.0" prefWidth="506.0">
                <padding>
                    <Insets bottom="2.0" left="20.0" right="2.0" top="2.0" />
                </padding>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../assets/patient-logo-light.png" />
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                </ImageView>
                <Label styleClass="brand-name" stylesheets="@../../css/common.css" text="PATIENTS CONTROL PANEL" />
            </HBox>
            <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="56.0" prefWidth="279.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets right="20.0" />
                </padding>
            </HBox>
        </HBox>
    </top>
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="354.0" prefWidth="167.0" styleClass="nav-box" stylesheets="@../../css/common.css" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20.0" />
            </padding>
            <HBox alignment="CENTER" prefHeight="41.0" prefWidth="167.0">
                <Button mnemonicParsing="false" onAction="#onAddPatient" prefWidth="150.0" styleClass="main-button" stylesheets="@../../css/patients/patients.css" text="ADD PATIENT" />
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="41.0" prefWidth="167.0">
                <Button mnemonicParsing="false" onAction="#onViewPatients" prefWidth="150.0" styleClass="main-button" stylesheets="@../../css/patients/patients.css" text="VIEW PATIENTS" />
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="133.0" prefHeight="41.0" prefWidth="167.0">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </HBox>
        </VBox>
    </left>
</BorderPane>
