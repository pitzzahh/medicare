<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" minWidth="-Infinity" styleClass="box" stylesheets="@../../css/card.css"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.github.pitzzahh.medicare.controllers.doctors.DoctorCardController">
    <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
        <padding>
            <Insets bottom="10.0" left="40.0" top="10.0"/>
        </padding>
        <HBox alignment="CENTER_LEFT" minWidth="-Infinity">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
            <Label alignment="CENTER" contentDisplay="RIGHT" graphicTextGap="0.0" styleClass="card-label"
                   stylesheets="@../../css/card.css" text="FIRST NAME:" HBox.hgrow="ALWAYS">
                <font>
                    <Font size="16.0"/>
                </font>
                <HBox.margin>
                    <Insets right="38.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="firstName" minWidth="300.0" prefWidth="300.0" styleClass="inputs"
                       stylesheets="@../../css/card.css" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" minWidth="-Infinity">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
            <Label alignment="CENTER" contentDisplay="RIGHT" graphicTextGap="0.0" styleClass="card-label"
                   stylesheets="@../../css/card.css" text="MIDDLE NAME:" HBox.hgrow="ALWAYS">
                <font>
                    <Font size="16.0"/>
                </font>
                <HBox.margin>
                    <Insets right="20.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="middleName" minWidth="300.0" prefWidth="300.0" styleClass="inputs"
                       stylesheets="@../../css/card.css" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" minWidth="-Infinity">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
            <Label alignment="CENTER" contentDisplay="RIGHT" graphicTextGap="0.0" styleClass="card-label"
                   stylesheets="@../../css/card.css" text="LAST  NAME:" HBox.hgrow="ALWAYS">
                <font>
                    <Font size="16.0"/>
                </font>
                <HBox.margin>
                    <Insets right="39.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="lastName" minWidth="300.0" prefWidth="300.0" styleClass="inputs"
                       stylesheets="@../../css/card.css" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="80.0" minWidth="-Infinity">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
            <Label contentDisplay="RIGHT" graphicTextGap="0.0" styleClass="card-label" stylesheets="@../../css/card.css"
                   text="AGE:">
                <HBox.margin>
                    <Insets right="102.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="age" minWidth="300.0" prefWidth="300.0" styleClass="inputs"
                       stylesheets="@../../css/card.css" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="110.0" minWidth="-Infinity">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
            <Label contentDisplay="RIGHT" graphicTextGap="0.0" styleClass="card-label" stylesheets="@../../css/card.css"
                   text="GENDER:">
                <HBox.margin>
                    <Insets right="69.0"/>
                </HBox.margin>
            </Label>
            <ChoiceBox fx:id="gender" maxWidth="1200.0" minWidth="300.0" prefWidth="300.0" styleClass="inputs"
                       stylesheets="@../../css/card.css" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="140.0" minWidth="-Infinity">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
            <Label contentDisplay="RIGHT" graphicTextGap="0.0" styleClass="card-label" stylesheets="@../../css/card.css"
                   text="DATE OF BIRTH:">
                <HBox.margin>
                    <Insets right="14.0"/>
                </HBox.margin>
            </Label>
            <DatePicker fx:id="dateOfBirth" maxWidth="1200.0" minWidth="300.0" prefWidth="300.0" styleClass="inputs"
                        stylesheets="@../../css/card.css" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="170.0" minWidth="-Infinity">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
            <Label contentDisplay="RIGHT" graphicTextGap="0.0" styleClass="card-label" stylesheets="@../../css/card.css"
                   text="ADDRESS:">
                <HBox.margin>
                    <Insets right="60.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="address" minWidth="300.0" prefWidth="300.0" styleClass="inputs"
                       stylesheets="@../../css/card.css" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="200.0" minWidth="-Infinity">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
            <Label contentDisplay="RIGHT" graphicTextGap="0.0" styleClass="card-label" stylesheets="@../../css/card.css"
                   text="PHONE NUMBER:">
                <HBox.margin>
                    <Insets right="3.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="phoneNumber" minWidth="300.0" prefWidth="300.0" styleClass="inputs"
                       stylesheets="@../../css/card.css" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="230.0" minWidth="-Infinity">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
            <Label contentDisplay="RIGHT" graphicTextGap="0.0" styleClass="card-label" stylesheets="@../../css/card.css"
                   text="SPECIALIZATION:">
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </Label>
            <ChoiceBox fx:id="specialization" maxWidth="1200.0" minWidth="300.0" prefWidth="300.0" styleClass="inputs"
                       stylesheets="@../../css/card.css" HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>
    <VBox alignment="BOTTOM_CENTER" HBox.hgrow="ALWAYS">
        <HBox alignment="CENTER">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
            <Button fx:id="updateOrSaveButton" mnemonicParsing="false" prefWidth="150.0" styleClass="update-button"
                    stylesheets="@../../css/card.css" text="UPDATE"/>
        </HBox>
        <HBox alignment="CENTER" minWidth="-Infinity">
            <Button fx:id="removeButton" mnemonicParsing="false" prefWidth="150.0" styleClass="remove-button"
                    stylesheets="@../../css/card.css" text="REMOVE"/>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>
        <HBox.margin>
            <Insets/>
        </HBox.margin>
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
        </padding>
    </VBox>
</HBox>
