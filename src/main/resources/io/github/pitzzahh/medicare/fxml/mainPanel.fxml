<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #3D5A80; -fx-background-radius: 50px 0 0 0;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.pitzzahh.medicare.controllers.MainPanelController">
    <top>
        <HBox prefHeight="56.0" prefWidth="600.0" styleClass="header-box" stylesheets="@../css/main.css" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER_LEFT" prefHeight="51.0" prefWidth="292.0">
                <padding>
                    <Insets bottom="2.0" left="20.0" right="2.0" top="2.0" />
                </padding>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                      <Image url="@../assets/logo.png" />
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
                  </ImageView>
            <Label styleClass="brand-name" stylesheets="@../css/main.css" text="MED" />
            <Label stylesheets="@../css/main.css" text="i">
               <styleClass>
                  <String fx:value="brand-name" />
                  <String fx:value="i" />
               </styleClass>
            </Label>
            <Label stylesheets="@../css/main.css" text="CARE">
               <styleClass>
                  <String fx:value="brand-name" />
                  <String fx:value="care" />
               </styleClass>
            </Label>
            </HBox>
            <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="56.0" prefWidth="511.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets right="20.0" />
                </padding>
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#onLogout" styleClass="logout-button" stylesheets="@../css/main.css">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="logout-button">
                            <Image url="@../assets/logout.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </HBox>
    </top>
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="354.0" prefWidth="167.0" styleClass="nav-box" stylesheets="@../css/main.css" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20.0" />
            </padding>
            <HBox alignment="CENTER" prefHeight="41.0" prefWidth="167.0">
                <Button mnemonicParsing="false" onAction="#onClickPatients" prefWidth="150.0" styleClass="main-button" stylesheets="@../css/main.css" text="PATIENTS">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../assets/patient-logo.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="41.0" prefWidth="167.0">
                <Button mnemonicParsing="false" onAction="#onClickDoctors" prefWidth="150.0" styleClass="main-button" stylesheets="@../css/main.css" text="DOCTORS">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../assets/doctor-logo.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="133.0" prefHeight="41.0" prefWidth="167.0">
                <Button graphicTextGap="25.0" mnemonicParsing="false" onAction="#onClickAbout" prefWidth="150.0" styleClass="main-button" stylesheets="@../css/main.css" text="ABOUT">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../assets/about.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </HBox>
        </VBox>
    </left>
</BorderPane>
